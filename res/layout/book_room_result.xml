<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants" >

    

    <ImageButton
        android:id="@+id/book_map"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="16dp"
        android:focusable="false"
        android:focusableInTouchMode="true"
        android:scaleType="center"
        android:src="@drawable/ic_book_map" 
        android:contentDescription="@string/show_book_location"/>

    

    <TextView
        android:id="@+id/room_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/book_map"
        android:layout_alignLeft="@+id/room_time"
        android:focusable="false"
        android:text="@string/book_status"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/room_time"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:focusable="false"
        android:maxLines="2"
        android:text="@string/book_title"
        android:textSize="14sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/room_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true" 
       	android:textSize="14sp"
        android:textStyle="bold" />

</RelativeLayout>